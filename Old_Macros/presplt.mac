!
! macro plots pressure face pressure profile
!
PARSAV
*GET,YSTART,NODE,,MNLOC,Y
INC=.0526028
CM,_MACRO_,NODE
*GET,YEND,NODE,,MXLOC,Y
NLOOPS=NINT((YEND-YSTART)/INC) +1
*DIM,PLOAD,,NLOOPS,4
YLOW=YSTART
*DO,SEG,1,2
NSEL,R,LOC,Y,YLOW,YLOW+INC
NPOINT=NDNEXT(0)
SPOINT,NPOINT
FSUM
*GET,FX,FSUM,,ITEM,FX
*GET,FY,FSUM,,ITEM,FY
*GET,FZ,FSUM,,ITEM,FZ
LOC=SEG
PLOAD(SEG,1)=FX
PLOAD(SEG,2)=FY
PLOAD(SEG,3)=FZ
PLOAD(SEG,4)=YLOW
YLOW=YLOW+INC	! DO NEXT BATCH OF NODES
*ENDDO


